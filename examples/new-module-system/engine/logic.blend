module game.logic

// Game logic module - located in yet another directory
// Shows flexible project organization

import getPlayerX, getPlayerY from game.player
import getCurrentLevel from game.level

// Game state variables
var gameRunning: boolean = true

export function updateGameState(): void
    // Check game conditions
    if getCurrentLevel() > 5 then
        // Game complete
        gameRunning = false
    end if
end function

export function isGameRunning(): boolean
    return gameRunning
end function

export function endGame(): void
    gameRunning = false
end function
